@model Employee


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <row class="row pb-2">
            <h2 class="text-primary">
                Delete Employee Record
            </h2>
            <hr />
        </row>


        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Phone" class="p-0">Phone</label>
            <input asp-for="Phone" disabled class="form-control" />

        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0">Email</label>
            <input asp-for="Email" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Position" class="p-0">Position</label>
            <input asp-for="Position" disabled class="form-control" />
           
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Department" class="p-0">Department</label>
            <input asp-for="Department" disabled class="form-control" />
          
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="AccNum" class="p-0">AccNum</label>
            <input asp-for="AccNum" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="EmpStatus" class="p-0">EmpStatus</label>
            <input asp-for="EmpStatus" disabled class="form-control" />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}